<% wrap_layout :layout do %>
  <div class="row center-xs">
    <div class="col-xs-12 col-sm-9 col-md-7">
      <h1 class="u-font-mega u-font-center c-page-title"><%= current_page.title %></h1>
    </div>
  </div>
  <div class="row center-xs md-border-right xs-enclosed-section c-work-meta">
    <div class="col-sm-12 <% if current_page.data.context %>col-md-7<% else %>col-md-8<% end %> col-xs-12">
      <h3>Intro</h3>
      <div class="intro">
        <p><%= current_page.data.intro %></p>
      </div>
    </div>
    <% if current_page.data.context %>
      <div class="col-sm-12 col-md-3 col-xs-12">
        <h3>Context</h3>
        <p><%= current_page.data.context %></p>
      </div>
    <% end %>
    <div class="col-sm-12 col-md-3 col-xs-12">
      <h3>Scope</h3>
      <div>
        <p class="c-scope-list">
          <%= current_page.data.scope %>
        </p>
      </div>
    </div>
  </div>

  <article>
    <%= yield %>
  </article>

  <%= partial "partials/latest-work" %>

  <%= partial "partials/newsletter-form" %>
<% end %>
