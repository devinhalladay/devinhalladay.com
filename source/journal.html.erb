---
title: Journal
---
<section>
  <div class="row">
    <% blog('journal').articles.each do |article| %>
      <div class="article col-xs-6">
        <a href="<%= article.url %>">
          <h1><%= article.title %></h1>
        </a>
        <small class="u-font-meta u-font-sans"><%= article.date.strftime('%A %-d %B %Y') %></small>
        <p><%= Nokogiri::HTML(article.summary).text %> <a href="<%= article.url %>">Read more</a></p>
      </div>
    <% end %>
  </div>
</section>
