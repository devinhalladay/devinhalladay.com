---
title: Devin Halladay, Designer and Writer
---
<div class="row xs-border-right">
  <div class="col-xs-12 col-sm-6">
    <div class="intro-section">
      <h1>Devin<br>Halladay</h1>
      <hr class="hr-vertical">
      <p><strong>Multidisciplinary designer &amp; writer by day.</strong><br>Sculptor and sound artist by night.</p>
    </div>
  </div>
  <div class="col-xs-12 col-sm-6">
    <div class="c-index-profile-image"></div>
  </div>
</div>

<%= partial("partials/section-title", :locals => { :title => "Latest Articles" }) %>

<section class="c-latest-articles">
  <div class="row">
    <% blog('journal').articles[0...2].each do |article| %>
      <div class="article col-xs-12 col-sm-6">
        <a class="article-title" href="<%= article.url %>">
          <h1><%= article.title %></h1>
        </a>
        <small class="u-font-meta u-font-sans"><%= article.date.strftime('%A %-d %B %Y') %></small>
        <p><%= Nokogiri::HTML(article.summary).text %> <a href="<%= article.url %>">Read more</a></p>
      </div>
    <% end %>
  </div>
</section>

<%= partial("partials/section-title", :locals => { :title => "Selected Work" }) %>

<section class="c-selected-work">
  <% blog('work').articles.each do |work| %>
    <a href="<%= work.url %>">
      <div class="c-work-overlay">
        <picture>
          <source media="(min-width: 1020px)" srcset="/images/<%= work.date.strftime('%Y/%m') %>/<%= work.title.downcase.gsub(' ', '-') %>/cover/large.png">
          <source media="(min-width: 900px)" srcset="/images/<%= work.date.strftime('%Y/%m') %>/<%= work.title.downcase.gsub(' ', '-') %>/cover/large-sm.png">
          <source media="(min-width: 680px)" srcset="/images/<%= work.date.strftime('%Y/%m') %>/<%= work.title.downcase.gsub(' ', '-') %>/cover/med.png">
          <source srcset="/images/<%= work.date.strftime('%Y/%m') %>/<%= work.title.downcase.gsub(' ', '-') %>/cover/small.png">
          <img alt="<%= work.title %>" srcset="">
        </picture>

        <h2 class="u-font-sans"><%= work.title %></h2>
      </div>
    </a>
  <% end %>
</section>

<%= partial "partials/newsletter-form" %>
