---
layout: nil
---
<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <link rel="hub" href="https://pubsubhubbub.appspot.com"/>

  <title>{{ site.name }}</title>
  <link href="http://devinhalladay.com"/>
  <link type="application/atom+xml" rel="self" href="http://devinhalladay.com/atom.xml"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>http://devinhalladay.com</id>
  <author>
    <name>Devin Halladay</name>
    <email>devin@devinhalladay.com</email>
  </author>

  {% for post in site.posts %}
  <entry>
    <id>http://devinhalladay.com{{ post.id }}</id>
    <link type="text/html" rel="alternate" href="http://devinhalladay.com{{ post.url }}"/>
    <title>{{ post.title }}</title>
    <published>{{ post.date | date_to_xmlschema }}</published>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <author>
      <name>Devin Halladay</name>
      <uri>http://devinhalladay.com/</uri>
    </author>
    <content type="html">{{ post.content | xml_escape }}</content>
  </entry>
  {% endfor %}

</feed>